{{#compareList this '0' operator='=='}}
    <div class="empty-list">
        <div class="message">Você não possui novas notificações.</div>
    </div>
{{else}}
   {{#each this}}
    <div class="notification" >
        <div class="vertical-line"></div>
        <div class="info">
            <div class="selection">
                <input name="options" type="checkbox" id='{{id}}'/>
                <label for='{{id}}'></label>
            </div> 
            <div class="archive-option">
                <div class="date">16/06/2018</div>
                <div class="icon" id='{{id}}'></div>
            </div>
        </div>
        <div class="content">
            <div class="content-body">
                <div class="icon-and-description">
                    <div class="priority-icon"></div>
                    <div class="description">{{detail.description}}</div>
                </div>
            </div>
            <button class="action">{{detail.action}}</button>
        </div>
    </div>
    {{/each}}
{{/compareList}}